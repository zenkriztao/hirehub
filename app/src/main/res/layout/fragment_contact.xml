<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_level"
    tools:context=".presentation.applicant.dashboard.profile.detail.aboutme.ContactFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_email_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_email_title"
                android:layout_width="wrap_content"
                android:text="@string/email_title"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#3C3E56"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#c1cdfc"
                android:layout_marginTop="7dp"
                app:cornerRadius="20dp"
                >

            <TextView
                android:id="@+id/tv_email_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="14sp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="4dp"
                android:paddingHorizontal="10dp"
                android:ellipsize="end"
                android:textColor="#2327d2"
                tools:text="naya@gmail.com"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_phone_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_phone_title"
                android:layout_width="wrap_content"
                android:text="@string/phone_title"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#3C3E56"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#c1cdfc"
                android:layout_marginTop="7dp"
                app:cornerRadius="20dp"
                >

            <TextView
                android:id="@+id/tv_phone_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="4dp"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:ellipsize="end"
                tools:text="081238093838"
                android:textColor="#2327d2" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>